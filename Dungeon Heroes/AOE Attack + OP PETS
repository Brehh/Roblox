local atk = {
	["PlayerAttack"] = 1,
	["PlayerSkillAttack"] = 1,
	["PetDamage"] = 4
}

local function getlive()
	return workspace.Mobs:GetChildren()
end

-- This code was generated by Cobalt
-- https://github.com/notpoiu/cobalt

local Event = game:GetService("ReplicatedStorage").Systems.Combat.PetDamage
local mtHook; mtHook = hookmetamethod(game, "__namecall", function(self, ...)
	local args = table.pack(...)
	local method = getnamecallmethod()
	if method == "FireServer" then
		if atk[self.Name] ~= nil then
			local check = atk[self.Name]
			args[check] = coroutine.wrap(getlive)()
			if check == 4 then
				for x = 1,99 do
					mtHook(self, table.unpack(args, 1, args.n))
				end
			end
			return mtHook(self, table.unpack(args, 1, args.n))
		end
	end

	return mtHook(self, ...)
end)
