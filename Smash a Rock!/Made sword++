
function getrock()
	local char = game.Players.LocalPlayer.Character
	if not char then
		return
	end
	local tool = char:FindFirstChildWhichIsA("Tool")
	if not tool then
		return
	end
	if tool:GetAttribute("Type") ~= "Rock" then
		return
	end

	return tool:GetAttribute("Serial")
end


local id = getrock()

if id then
	local Event = game:GetService("ReplicatedStorage").Events.Action
	Event:FireServer(
		"SmithSword",
		{
			Main = id,
			Rocks = {
				[id] = true
			}
		}
	)
end
